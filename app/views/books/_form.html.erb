<div class="well">
  <%= form_for(book) do |f| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "Erro(s)") %></h2>
        <ul>
          <%= book.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <div class="field">
        <%= f.label "Título" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label "Descrição" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label "Autor" %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label "Imagem" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>
    <div class="form-group-sm">
      <div class="actions">
        <%= f.submit 'Salvar', class: 'btn btn-primary' %>
        <%= link_to "Voltar", :back, class: 'right btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
