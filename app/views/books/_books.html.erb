<%= sortable("title", "ordenar por Titulo") %><br />

<% @books.each do |book| %>
  <hr />
  <div class="well row">
    <div class="right"><span class="small" >Autor: <%= book.author %></span></div>
    <p class="book-image"><%= image_tag book.image.medium.url %></p>
    <p class="book-title"><%= book.title %></p>
    <p class="book-comment"><%= book.description %></p>
    <% if user_signed_in? %>
      <% if current_user.is_admin? %>
        <span class="right small">
          <%= link_to "Editar", edit_book_path(book.id) %>  |
          <%= link_to "Remover", book, method: :delete, data: {confirm: "VocÃª tem certeza?"} %>
        </span>
      <% end %>
    <% end %>
  </div>
<% end -%>

<%= will_paginate @books %>
